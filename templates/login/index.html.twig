{% extends 'base.html.twig' %}

{% block navbar %}
    {% include 'Navbar/navbarUser.html.twig' %}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="card text-center">
        <div class="card-header">
            <h1>Connexion</h1>
        </div>
        <div class="card-body">
            <h5 class="card-title">Veuillez rentrer vos informations</h5>
            <div class="form-connexion">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                <form action="{{ path('app_login') }}" method="post">
                    <label for="username">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                    <label for="password">Password:</label>
                    <input type="password" id="password" name="_password"/>

                    {# If you want to control the URL the user is redirected to on success
                    <input type="hidden" name="_target_path" value="/account"/> #}

                    <button class="button-submit btn btn-primary" type="submit">login</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {% include 'Footer/footerUser.html.twig' %}
{% endblock %}
